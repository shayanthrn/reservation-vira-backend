<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="utf-8" />
    <base id="base">
    <script src="/assets/js/config.js"></script>
    <link rel="apple-touch-icon" sizes="76x76" href="assets/img/logo.png">
    <link rel="icon" type="image/png" href="assets/img/logo.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
        name='viewport' />
    <title>دکتر تجویز</title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" href="assets/fonts/font-awesome/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="assets/css/now-ui-kit.css" rel="stylesheet" />
    <link href="assets/css/plugins/owl.carousel.css" rel="stylesheet" />
    <link href="assets/css/plugins/owl.theme.default.min.css" rel="stylesheet" />
    <link href="assets/css/main.css" rel="stylesheet" />
    <style>
        @media screen and (max-width : 800px) {
            .mydiv{
                display: contents;
            }
        }
        .stars__wrapper {
            display: flex;
        }

        .star {
        color: gray; /* gray color */
        font-size: 24px; /* star size */
        text-decoration: none; /* delete underline of link */
        transition: .2s; /* smooth */
        }

        .star:hover,
        .star:hover ~ .star {
          color: #fb0; /* red color */
        }

        /* don't hover after choosing */
        .wrapper__active .star:hover:not(.choosen),  
        .wrapper__active .star:hover:not(.choosen) ~ .star:not(.choosen) {
        color: gray;
        }

        .choosen {
        color: #fb0; /* red color */
        }
    </style>
</head>

<body class="index-page sidebar-collapse">

    <!-- header-responsive -->
    <%- include('header-responsive.ejs'); -%>
    <!-- header-responsive -->

    <div class="wrapper default">

        <!-- header -->
        <%- include('header.ejs'); -%>
        <!-- header -->


        <!-- main -->
        <main class="search-page default">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 order-2">
                        <div class="listing default">
                            <div class="tab-content default text-center">
                                <div class="tab-pane active" id="related" role="tabpanel" aria-expanded="true">
                                    <div class="container no-padding-right">
                                        <ul class="row listing-items">
                                            <li class="card rounded-20 my-3 medicaitve">
                                                <div class="row p-3">
                                                    <a class="row col-8 pr-0">
                                                        <div class="col-5 profile text-center">
                                                            <img src="<%= HC.image %>"
                                                                onerror="this.src='assets/img/altimage.png'"
                                                                class=" rounded-circle ImageSize"
                                                                style="min-height: 200px; max-height: 200px; min-width: 200px; max-width: 200px;">
                                                        </div>
                                                        <div class="col-9 text-right" style="font-size: 9px;">
                                                            <h1 class="text-18 font-weight-bold text-slate">
                                                                <%= HC.name %>
                                                            </h1>
                                                            <h2 class="text-16 py-2">
                                                                <%= category %>
                                                            </h2>
                                                        </div>
                                                    </a>
                                                    <div
                                                        class="card col-4 border-0 bg-ice-blue rounded-10 p-3 h-100 text-14 align-items-start flex-column mydiv">
                                                        <ul class="list-unstyled pr-0 text-right text-12"
                                                            style="height: 60%;">
                                                            <% if(rateflag!=1){ %>
                                                            <li class="py-1 text-gray-200 font-weight-medium">
                                                                <span class='stars__wrapper'>
                                                                    امتیاز دهید:
                                                                    <a href="/rateHC?point=5&id=<%=HC._id%>&from=<%="/HealthCenters/"+HC.type+"/"+HC.name.split(' ').join('-')%>" class='star'>★</a>
                                                                    <a href="/rateHC?point=4&id=<%=HC._id%>&from=<%="/HealthCenters/"+HC.type+"/"+HC.name.split(' ').join('-')%>" class='star'>★</a>
                                                                    <a href="/rateHC?point=3&id=<%=HC._id%>&from=<%="/HealthCenters/"+HC.type+"/"+HC.name.split(' ').join('-')%>" class='star'>★</a>
                                                                    <a href="/rateHC?point=2&id=<%=HC._id%>&from=<%="/HealthCenters/"+HC.type+"/"+HC.name.split(' ').join('-')%>" class='star'>★</a>
                                                                    <a href="/rateHC?point=1&id=<%=HC._id%>&from=<%="/HealthCenters/"+HC.type+"/"+HC.name.split(' ').join('-')%>" class='star'>★</a>
                                                                </span>
                                                            </li>
                                                            <% } %>
                                                            <li class="py-1 text-gray-200 font-weight-medium">
                                                                <span class='stars__wrapper'>
                                                                    امتیاز :
                                                                    <span class="points"><i class="fa fa-star" aria-hidden="true" style="color: #fb0;"></i><%if(HC.countofvotes==0&&HC.rate==0) { %>برای این مرکز امتیازی ثبت نشده است.<% }else{ %> <%= HC.rate %> <% } %> </span>
                                                                </span>
                                                            </li>
                                                            <li class="py-1 text-gray-200 font-weight-medium">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                                                    height="24" viewBox="0 0 24 24" fill="none"
                                                                    stroke="currentColor" stroke-width="2"
                                                                    stroke-linecap="round" stroke-linejoin="round"
                                                                    class="feather feather-map-pin icon-20"
                                                                    data-v-4606823b="">
                                                                    <path
                                                                        d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z">
                                                                    </path>
                                                                    <circle cx="12" cy="10" r="3"></circle>
                                                                </svg>
                                                                <span
                                                                    class="location text-gray-200 mr-3"><%= HC.address %></span>
                                                            </li>
                                                            <li class="py-1 text-gray-200 font-weight-medium">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                                                    height="24" viewBox="0 0 24 24" fill="none"
                                                                    stroke="currentColor" stroke-width="2"
                                                                    stroke-linecap="round" stroke-linejoin="round"
                                                                    class="feather feather-book icon-20"
                                                                    data-v-4606823b="">
                                                                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                                                                    <path
                                                                        d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z">
                                                                    </path>
                                                                </svg>
                                                                <span data-v-4606823b=""
                                                                    class="experience text-gray-200 mr-3"><%= HC.background %>
                                                                    سال</span>
                                                            </li>
                                                            <li class="py-1 text-gray-200 font-weight-medium">
                                                                <% if ( HC.systype == "B") {  %>
                                                                <a href="<%= "/reservation/" + HC.type + "/" + HC.name %>"
                                                                    class="btn btn-info">
                                                                    نوبت گیری
                                                                </a>
                                                                <% } else { %>
                                                                <a href="<%= "/reservation/" + HC.type + "/" + HC.name + "/" + category%>"
                                                                    class="btn btn-info">
                                                                    نوبت گیری
                                                                </a>
                                                                <% } %>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                        <div class="comments-area default">
                                            <div class="box-tabs-tab"
                                                style="text-align: -webkit-right;margin-right: 50px;">
                                                <h5>
                                                    <i class="now-ui-icons ui-2_chat-round"></i> نظرات
                                                    کاربران:
                                                </h5>
                                                <a style="max-width: 200px;" href="/submitcomment?for=<%=HC._id%>&from=<%="/HealthCenters/"+HC.type+"/"+HC.name.split(' ').join('-')%>" class="btn btn-info">
                                                    ثبت نظر
                                                </a>
                                            </div>
                                            <% if(comments.length==0){ %>
                                                نظری موجود  نیست.
                                            <% } else {  %>
                                            <ol class="comment-list">
                                                <% for(let i=0;i<comments.length;i++) { %>
                                                <li>
                                                    <div class="comment-body">
                                                        <div class="row">
                                                            <div class="col-md-3 col-sm-12">
                                                                <div class="comment-author">
                                                                    توسط <%= comments[i].sender[0].firstname +" "+comments[i].sender[0].lastname %> در تاریخ <%= comments[i].time %>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-9 col-sm-12 comment-content">
                                                                <div class="row">
                                                                    <h5 style="margin-right: 50px;">
                                                                        <%= comments[i].title %>
                                                                    </h5>
                                                                </div>
                                                                <p style="margin-right: 50px;margin:initial;word-break: break-all;">
                                                                   <%= comments[i].content %>
                                                                </p>
                                                                <% if(comments[i].response != undefined ) { %>
                                                                    <div class="row">
                                                                      <h5 style="margin-right: 50px;">
                                                                          پاسخ:
                                                                      </h5>
                                                                    </div>
                                                                    <p style="margin-right: 50px;margin:initial;word-break: break-all;">
                                                                      <%= comments[i].response %>
                                                                    </p>
                                                                    <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </li>
                                                <% } %>
                                            </ol>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="most-view" role="tabpanel" aria-expanded="false">
                                    <div class="container no-padding-right">
                                        <ul class="row listing-items">
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- main -->

        <!-- footer -->
        <%- include('footer.ejs'); -%>
        <!-- footer -->


    </div>
</body>
