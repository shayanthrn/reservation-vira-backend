      <main role="main" class=" ml-sm-auto col-lg-9 col-xl-10 px-4" id="doctors-profile">
        <div class="container-fluid">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">پروفایل مرکز</h1>
            <button class="btn btn-info" onclick="goBack()">بازگشت به صفحه قبل</button>

            <script>
            function goBack() {
              window.history.back();
            }
            </script>
          </div>

          <div class="row">
            <div class="col-sm-6 col-md-2 mb-5">
              <img class="img-fluid" src="<%= HC.image %>" onerror="this.src='assets/img/altimage.png'">
            </div>
            <div class="col-sm-12 col-md-10">
              <div class="row">
                <div class="col-md-4 col-lg-2">
                  <h5>نام</h5>
                </div>
                <div class="col-md-6 col-lg-6">
                  <p><%= HC.name %></p>
                </div>
              </div>
              <% if(HC.categories!=undefined) {  %>
              <div class="row">
                <div class="col-md-4 col-lg-2">
                  <h5>تخصص ها</h5>
                </div>
                <div class="col-md-6 col-lg-6">
                  <p><% for(let i = 0 ; i < HC.categories.length ; i++ ) {  %>
                    <% if(i==0) { %>
                        <%= HC.categories[i].name %>
                    <% } else { %>
                        <%= "," + HC.categories[i].name %>
                    <% } }%>
                  </p>
                </div>
              </div>
              <% } %>
              <div class="row">
                <div class="col-md-4 col-lg-2">
                  <h5>شهر</h5>
                </div>  
                <div class="col-md-6 col-lg-6">
                  <p><%= HC.city %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 col-lg-2">
                  <h5>ادرس</h5>
                </div>
                <div class="col-md-6 col-lg-6">
                  <p><%= HC.address %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 col-lg-2">
                  <h5>شماره تماس</h5>
                </div>
                <div class="col-md-6 col-lg-6">
                  <p><%= HC.phonenumber %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 col-lg-2">
                  <h5>نوع</h5>
                </div>
                <div class="col-md-6 col-lg-6">
                 <%= HC.type %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 col-lg-2">
                  <h5>نام کاربری</h5>
                </div>
                <div class="col-md-6 col-lg-6">
                 <%= HC.username %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 col-lg-2">
                  <h5> رمز عبور</h5>
                </div>
                <div class="col-md-6 col-lg-6">
                  <a data-toggle="modal" data-target="#exampleModalLong" class="btn btn-info">ریست کردن رمز عبور</a>
                </div>
              </div>
               <!-- modal -->
               <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle" style="position: relative; right: 30px;">دکتر تجویز</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form action="resetHCpass" method="POST">
                        رمز جدید
                        <input class="form-control" type="text" name="newpass">
                        <input class="form-control" type="text" style="display: none;" name="HCname" value="<%= HC.name %>" >
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                      <button type="submit" class="btn btn-danger">تایید</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!--modal-->
            </div>
          </div>
        </div>
      </main>

    </div>
  </div>
  



