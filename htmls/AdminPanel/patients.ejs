      <i class="fa fa-bars menu-icon"></i>
    </button>
  </nav>

  <div class="container-fluid">
    <div class="row">
      
      <nav class="col-lg-3 col-xl-2 d-lg-block sidebar collapse" id="navbarTogglerDemo">
        <div class="sidebar-sticky">
          <ul class="nav flex-column">
            
            <li class="nav-item">
              <a class="nav-link " href="/adminpanel/dashboard" >
                <i class="fa fa-tachometer"></i>
                داشبورد
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="/adminpanel/chats" >
                <i class="fa fa-commenting"></i>
                گفتگو های متنی
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/AdminPanel/telereserves" >
                <i class="fa fa-phone"></i>
                رزرو های تلفنی
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/adminpanel/doctors" >
                <i class="fa fa-user-md"></i>
                دکتر ها
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/adminpanel/healthcenters" >
                <i class="fa fa-heartbeat"></i>
                مراکز درمانی
              </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/adminpanel/visittimes">
                  <i class="fa fa-calendar"></i>
                  تعیین زمانبندی
                </a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="/adminpanel/costmanage">
                <i class="fa fa-calendar"></i>
                تعیین هزینه ها
              </a>
          </li>
            <li class="nav-item">
              <a class="nav-link" href="/adminpanel/categories" >
                <i class="fa fa-book"></i>
                تخصص ها
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/adminpanel/patients" >
                <i class="fa fa-users"></i>
                بیماران
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/adminpanel/transactions" >
                <i class="fa fa-money"></i>
                تراکنش های مالی
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/exit" >
                <i class="fa fa-sign-out"></i>
                خروج
              </a>
            </li>
          </ul>

          </div>
      </nav>


      <main role="main" class=" ml-sm-auto col-lg-9 col-xl-10 px-4" id="clients">
        <div class="container-fluid">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">بیماران</h1>
            <input oninput="fastsearch()" class="form-control" type="text"  name="searchinput" id="searchinput" style="max-width: 30%;border-width: 2px;border-color: black;background-color: white;" placeholder="جتسجو سریع...">
            <a class="btn btn-inf" style="visibility: hidden;">test</a>
          </div>
          

          <div class="row">
            <div class="col">
              <div class="table-responsive">
                <% if(patients.length!=0) { %>
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">نام و نام خانوادگی</th>
                      <th scope="col">شماره تماس</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0;i<patients.length;i++) { %>
                    <tr name="objects" data-name="<%= patients[i].firstname +" "+ patients[i].lastname %>">
                      <th scope="row"><%=i+1%></th>
                      <td><a href="<%= "AdminPanel/users/" + patients[i]._id %>"><%=patients[i].firstname + " " +  patients[i].lastname%></a></td>
                      <td><%= patients[i].phonenumber %></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
                <% } else {  %>
                  موردی جهت نمایش وجود ندارد
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </main>

    </div>
  </div>
  


  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script>window.jQuery || document.write('<script src="assets/panelassests/jquery-slim.min.js"><\/script>')</script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://cdn.rtlcss.com/bootstrap/v4.1.3/js/bootstrap.min.js" integrity="sha384-C/pvytx0t5v9BEbkMlBAGSPnI1TQU1IrTJ6DJbC8GBHqdMnChcb6U4xg4uRkIQCV" crossorigin="anonymous"></script>
  <script>
    function fastsearch(){
        value=document.getElementById("searchinput").value;
        document.getElementsByName("objects").forEach(function(doc){
            if(!doc.dataset.name.includes(value)){
                doc.style.display="none"
            }
            else{
                doc.style.display=""
            }
        })
    }
  </script>

</body>


</html>