      <main role="main" class=" ml-sm-auto col-lg-9 col-xl-10 px-4" id="specialties">
        <div class="container-fluid">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">تخصص ها</h1>
            <a href="/adminpanel/addcategory" class="btn btn-success">
              <i class="fa fa-plus"></i>
              اضافه کردن
            </a>
          </div>

          <div class="row">
            <% if(categories.length != 0 ) { %>
            <% for( let i=0 ; i< categories.length ; i++) { %>
            <!-- for loop here -->
            <div class="col-xl-4 col-sm-6 col-xs-12">
              <div class="card mb-3">
                <div class="row no-gutters">
                  <div class="col-md-4">
                    <div class="specialty-img" style="background-image: url('<%=categories[i].image %>');">
                    </div>
                  </div>
                  <div class="col-md-8">
                    <div class="card-body p-2 h-100 d-flex flex-column justify-content-between">
                      <h5 class="card-title">
                       <%= categories[i].name %>
                      </h5>
                      <div class="d-flex justify-content-end">
                        <!-- <a class="btn btn-info btn-sm mr-2" href="/adminpanel/editcategory?category=<%=categories[i].name%>">
                          <i class="fa fa-edit"></i>
                          اصلاح
                        </a> -->
                        <a class="btn btn-danger btn-sm" href="/removecategory?category=<%=categories[i].name%>">
                          <i class="fa fa-trash"></i>
                          حذف
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
            <% } else {  %>
              موردی جهت نمایش وجود ندارد
            <% } %>
            <!-- end for -->
          </div>


        </div>
