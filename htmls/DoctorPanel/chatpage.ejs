      <main role="main" class=" ml-sm-auto col-lg-9 col-xl-10 px-4" id="dashboard">
        <div class="container-fluid">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">گفتگو ها</h1>
            <a href="/DoctorPanel/tickets" class="btn btn-info">بازگشت به صفحه قبل</a>
          </div>
          <div class='col'>
            <% for(let i = 0; i<chat.tickets.length;i++) { %>
            <% if (chat.tickets[i].sender=="patient") { %>
            <div class="col-sm-12 col-md-6 col-lg-4 mb-3" style="float: left; clear: both; max-width: 50%;">
               <div class="card shadow left">
            <% } else { %>
            <div class="col-sm-12 col-md-6 col-lg-4 mb-3" style="float: right; clear: both; max-width: 50%;">
              <div class="card shadow right">
            <% } %>
              
                <div class="card-header bg-site-primary text-white p-2">
                    <%=chat.tickets[i].subject%>
                </div>
                <div class="card-body">
                <div>
                    <a href="test23"><%=chat.tickets[i].text%></a>
                </div>
                <br/>
                <% if (chat.tickets[i].file!=null) { %>
                <div>
                    <a href="<%= "/DoctorPanel/tickets/" + chat._id %>" class="btn btn-info">دریافت فایل </a>
                </div>
                <% } %>
                </div>
              </div>
            </div> 
            <% } %>
            <% if(chat.finished==false) { %>
            <div  class="col-sm-12 col-md-6 col-lg-4 mb-3" style="float: right; clear: both; max-width: 50%;">
                <div class="card shadow">
                    <div class="card-header bg-site-primary text-white p-2" style="background-color:#25d366;">
                       ارسال پیام جدید
                    </div>
                    <div class="card-body">
                    <div>
                        <label for="subject">موضوع :</label>
                        <input name="subject" id="subject" type="text">
                        <textarea style="min-height: 100px;min-width: 430px;"></textarea>
                    </div>
                    <br/>
                    <div>
                        <input type="file" class="btn btn-info">
                        <a href="test" class="btn btn-info" style="float: left;">ارسال</a>
                    </div>
                    </div>
                </div>
            </div>
            <% } %>
          </div>
        </div>
      </main>

    </div>
  </div>
  


