<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="utf-8" />
    <base id="base">
    <script src="/assets/js/config.js"></script>
    <link rel="apple-touch-icon" sizes="76x76" href="assets/img/logo.png">
    <link rel="icon" type="image/png" href="assets/img/logo.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
        name='viewport' />
    <title>دکتر تجویز</title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" href="assets/fonts/font-awesome/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="assets/css/now-ui-kit.css" rel="stylesheet" />
    <link href="assets/css/plugins/owl.carousel.css" rel="stylesheet" />
    <link href="assets/css/plugins/owl.theme.default.min.css" rel="stylesheet" />
    <link href="assets/css/main.css" rel="stylesheet" />
    <link href="assets/css/index.css" rel="stylesheet" />
    <style>
        @media screen and (max-width : 1920px) {
            .carda {
                max-width: 33%;
            }
        }
        @media screen and (max-width : 800px) {
            .carda {
                max-width: 100%;
            }
        }
    </style>
</head>

<body class="index-page sidebar-collapse">

    <!-- header-responsive -->
    <%- include('header-responsive.ejs'); -%>
    <!-- header-responsive -->

    <div class="wrapper default">

        <!-- header -->
        <%- include('header.ejs'); -%>
        <!-- header -->

        <!-- main -->
        <div style="padding-top:0;margin-top:0" class="container-fluid container-fluid-consulation-doctor-list">
            <div class="row">
                <div class="container">
                    <div class="box boxConsultant col-lg-10 float-right">
                        <div class="consultant-content-header">
                            <h2 id="doctors" class="header-title-Consultant-index">گفتگو و مشاوره با بهترین متخصصین</h2>
                            <div class="consulate-num"><span class="number"> بیش از <%= drcounts %> پزشک<boxconsultant></boxconsultant>
                                </span> <label class="consulation">آماده پاسخگویی به شما هستند</label></div>
                        </div>
                        <% for(let i = 0 ; i<categories.length ; i++) { %>
                        <% if (docpics[categories[i].name].length!=0) { %>
                        <div class="card carda">
                            <div class="">
                                <a href="/<%= "consultant/" + categories[i].name + "?city=all" %>">
                                        <div><%= categories[i].name %></div>
                                        <ul class="" style="display: flex;">
                                            <% for(let j = 0 ; j < docpics[categories[i].name].length ; j++ ) { %>
                                            <li class="dr-Consulation-list-item"><i style="position: relative; top: 40%; right: 20%; color: #0dd15b;" class="fa fa-circle"></i><img style="border-radius: 50%;max-width: 40px;max-height: 40px;min-width: 40px;min-height: 40px;" onerror="this.src='assets/img/altimage.png'" src="<%= docpics[categories[i].name][j].image %>">
                                            </li>
                                            <% } %>
                                            <li>
                                                ادامه
                                                <i class="fa fa-arrow-left"></i>
                                            </li>
                                        </ul>
                                </a>
                            </div>
                        </div>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <!-- main -->

        <!-- footer -->
        <%- include('footer.ejs'); -%>
        <!-- footer -->

    </div>
</body>
<!--   Core JS Files   -->
<script src="assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
