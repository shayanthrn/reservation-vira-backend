      <main role="main" class=" ml-sm-auto col-lg-9 col-xl-10 px-4" id="settings">
        <div class="container-fluid">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">ارسال جواب آزمایش</h1>
          </div>
          

          <div class="row">
            <div class="col-xl-4 col-lg-6 ">
              <form class="" autocomplete="off" action="addexp" enctype="multipart/form-data" method="post">
                  <div class="form-group">
                    <label for="file">
                      فایل آزمایش
                    </label>
                    <input type="file" class="form-control" name="file" id="file" accept="zip,application/zip" required>
                    
                    <p>فرمت مورد قبول:zip (zip!=rar)</p>
                  </div>
                  <div class="form-group">
                    <label for="phonenumber">
                     شماره تماس بیمار
                    </label>
                    <input type="text" oninput="checkdatalist()" list="mylist" class="form-control" name="phonenumber" id="phonenumber" required>
                    <datalist id="mylist">
                      <% for(i=0;i<phonenumbers.length;i++) { %>
                      <option class="options" value="<%= phonenumbers[i] %>"></option>
                      <% } %>
                    </datalist>
                  </div>
                  <div class="form-group">
                    <label for="description">
                     توضیحات
                    </label>
                    <textarea type="text" class="form-control" name="description" id="description" required></textarea>
                  </div>
                  <button type="submit" id="submitbtn" onclick="return myfunc()" class="btn btn-success submit-button float-right">
                    <i class="fa fa-check"></i>
                    ارسال
                  </button>
                  <script>
                    function myfunc(){
                    var inputformat=document.getElementById("file").value.toLowerCase().split('.');
                    checkdatalist();
                    if(inputformat[inputformat.length-1]!="zip"){
                      alert("فرمت فایل ورودی صحیح نیست")
                      return false;
                    }
                    }
                    function checkdatalist(){
                    const currentValue = document.getElementById('phonenumber').value;
                    document.getElementById("submitbtn").disabled = currentValue.length === 0 || document.querySelector('option[value="' + currentValue + '"]') === null;
                    }
                </script>
                </form>
            </div>
          </div>

