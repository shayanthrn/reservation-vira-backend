    <style>
        .reserve-time {
        border-radius: 5px !important;
        }
        .reserve-time.active {
        background-color: #ef5661 !important;
        border-color: #ef5661 !important;
        }
    </style>
 
</head>

<body>

    <div class="wrapper default shopping-page">
        <!-- header-shopping -->
        <header class="header-shopping default">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center pt-2">
                        <div class="header-shopping-logo default" >
                            <a href="#">
                                <img src="assets/img/logo.png" alt="" style="max-height: 40px; max-height: 40px; min-width: 40;min-height: 40px;">
                            </a>
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <ul class="checkout-steps">
                            <li>
                                <a href="shopping.html" class="active">
                                    <span>اطلاعات رزرو</span>
                                </a>
                            </li>
                            <li>
                                <a href="shopping-payment.html">
                                    <span>پرداخت</span>
                                </a>
                            </li>
                            <li>
                                <a href="shopping-complete-buy.html">
                                    <span> تایید نهایی  </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!-- header-shopping -->

        <!-- main-shopping -->
        <main class="cart-page default">
            <div class="container">
                <div class="row">
                    <div class="cart-page-content col-xl-9 col-lg-8 col-md-12 order-1">
                        <div class="cart-page-title">
                            <h1>انتخاب ساعت</h1>
                        </div>
                        <section class="page-content default">
                            <div class="checkout-shipment">
                               <form action="paymenthandler" method="POST">
                                <ul>
                                    <li><span> نام دکتر :</span><span><%= doctor.name %></span></li>
                                    <li><span>  تخصص :</span><span><%= doctor.category %></span></li>
                                </ul>
                                    <div class="row">
                                      <div class="col-12">
                                        <div class="reservation-carousel">
                                          <!-- TODO: [BACKEND] add class 'disabled' if  all times are reserved -->
                                          <% for(let i=0;i<days.length;i++) { %>
                                              <% if(freetimes[i].length==0) { %>
                                                <div class="carousel-cell m-2 disabled" data-key="<%= days[i].index %>">
                                                <% } else { %>
                                            <div class="carousel-cell m-2" data-key="<%= days[i].index %>">
                                                <% } %>
                                            <div class="card px-4">
                                              <div class="card-body text-center">
                                                <p class="mb-0" style="width: max-content;"><%= days[i].dayofweek%></p>
                                                <p class="mb-0"><%= days[i].day %></p>
                                                <p class="mb-0"><%= days[i].month%></p>
                                              </div>
                                            </div>
                                          </div>
                                          <% } %>
                                        </div>
                              
                                        <div id="reserveTimesContainer">
                                        <% for(let j=0;j<days.length;j++) { %>
                                          <div class="reserveTimes" data-key="<%= days[j].index %>">
                                            <div data-toggle="buttons">
                                            <% for(let k=0;k<freetimes[j].length;k++) { %>
                                                    <label class="reserve-time btn btn-outline-secondary float-right ml-2">
                                                      <input class="d-none" type="radio" name="choice" id="<%= days[j].index %>" value="<%=freetimes[j][k].start.hour + ":" + freetimes[j][k].start.min + ":" + days[j].year +":"+days[j].monthnum + ":" + days[j].day %>"> <%= freetimes[j][k].start.hour + ":" + freetimes[j][k].start.min + "-" + freetimes[j][k].end.hour + ":" + freetimes[j][k].end.min %>
                                                    </label>
                                            <% } %>
                                            </div>
                                          </div>
                                        <% } %>
                                        </div>
                                      </div>
                                    </div>
                            </div>
                        </section>
                    </div>
                    <aside class="cart-page-aside col-xl-3 col-lg-4 col-md-6 center-section order-2">
                        <div class="checkout-aside">
                            <div class="checkout-summary">
                                <div class="checkout-summary-main">
                                    <ul class="checkout-summary-summary">
                                        <li><span>مبلغ کل</span><span><%= doctor.visitcost %> تومان</span></li>
                                    </ul>
                                    <div class="checkout-summary-devider">
                                        <div></div>
                                    </div>
                                    <div class="checkout-summary-content">
                                        <div class="checkout-summary-price-title">مبلغ قابل پرداخت:</div>
                                        <div class="checkout-summary-price-value">
                                            <span class="checkout-summary-price-value-amount"><%= doctor.visitcost %></span>تومان
                                        </div>
                                        <a href="#" class="selenium-next-step-shipping">
                                            <div class="parent-btn">
                                                <button class="dk-btn dk-btn-info" type="submit">
                                                    پرداخت
                                                    <i class="now-ui-icons shopping_basket"></i>
                                                </button>
                                            </div>
                                        </a>
                                        <input type="text" name="doctor" id="doctor" value="<%= doctor.name %>" style="visibility: hidden;">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </main>
        <!-- main-shopping -->

        <!-- footer -->
        <footer class="main-footer default">
            <div class="back-to-top">
                <a href="#"><span class="icon"><i class="now-ui-icons arrows-1_minimal-up"></i></span> <span>بازگشت به
                        بالا</span></a>
            </div>
            <div class="description">
                <div class="container">
                    <div class="row">
                        <div class="site-description col-12 col-lg-7">
                            <h1 class="site-title">شرکت خدمات پزشکی ویرا</h1>
                            <p>
                                 ویرا ویرا ویرا ویراویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="copyright">
                <div class="container">
                    <p>
                        ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ویرا ر ویرا ویرا ویرا ویرا ویرا ویرا ویراویراویراویراویرا 
                    </p>
                </div>
            </div>
        </footer>
        <!-- footer -->
    </div>

